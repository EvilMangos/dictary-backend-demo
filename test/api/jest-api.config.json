{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".api-spec.ts",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFiles": ["<rootDir>/../loadEnv.ts"],
  "globalTeardown": "<rootDir>/../globalTeardown.ts",
  "clearMocks": true,
  "resetMocks": true
}
